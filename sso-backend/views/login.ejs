<!-- views/login.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <div style="text-align: center; line-height: 30px; margin-top: 15%;">
        <h1>Login</h1>
        <form action="/login" method="post">
                <input type="hidden" name="callbackUrl" value="<%= callbackUrl %>"> <!-- Hidden input for the callback URL -->
                <input type="email" id="username" name="email" placeholder="Email">
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
